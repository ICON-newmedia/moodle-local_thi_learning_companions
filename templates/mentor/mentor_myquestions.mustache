{{#hasaskedquestions}}
    <table class="stripe hover compact" id="askedquestionstable" data-paging="true" data-page-length="50">
        <thead>
        <tr>
            <th>{{#str}}title, local_learningcompanions{{/str}}</th>
            <th>{{#str}}answers, local_learningcompanions{{/str}}</th>
            <th>{{#str}}status, local_learningcompanions{{/str}}</th>
            <th>{{#str}}lastactivity, local_learningcompanions{{/str}}</th>
            <th>{{#str}}questiondate, local_learningcompanions{{/str}}</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {{#askedquestions}}
            <tr>
                <td>
                    <span data-balloon="{{question}}" data-balloon-pos="right">
                       <a href="{{cfg.wwwroot}}/local/learningcompanions/mentor/question.php?id={{get_id}}">{{title}}</a>
                    </span>
                </td>
                <td>
                    {{#get_answer_count}}
                        <a href="{{cfg.wwwroot}}/local/learningcompanions/mentor/question.php?id={{get_id}}">{{get_answer_count}}</a>
                    {{/get_answer_count}}
                    {{^get_answer_count}}
                        0
                    {{/get_answer_count}}
                </td>
                <td>
                    {{#is_closed}}
                        <span data-balloon="{{#str}}questionclosedon, local_learningcompanions, {{get_closed_time}}{{/str}}" data-balloon-pos="up">
                            <i class="fa fa-check icon-check-green"></i>
                        </span>
                    {{/is_closed}}
                    {{^is_closed}}
                        <i class="fa fa-rotate-right"></i>
                    {{/is_closed}}
                </td>
                <td data-order="{{get_last_activity}}">
                    {{get_last_activity_dmy}}
                </td>
                <td data-order="{{timecreated}}">
                    {{get_timecreated_dmy}}
                </td>
                <td>
                    <span data-balloon="{{#str}}deletemyquestion, local_learningcompanions{{/str}}" data-balloon-pos="left">
                        <i class="fa fa-trash icon-trash askedquestions-delete" data-qid="{{id}}" data-question="{{title}}"></i>
                    </span>
                </td>
            </tr>
        {{/askedquestions}}
        </tbody>
    </table>
{{/hasaskedquestions}}
{{^askedquestions}}
    <p>{{#str}}noquestionsfound, local_learningcompanions{{/str}}</p>
{{/askedquestions}}
<div class="local_learningcompanions_mentor_asknewquestion">
    <a href="{{cfg.wwwroot}}/local/learningcompanions/mentor/ask_open_question.php" class="btn btn-primary">{{#str}}asknewquestion, local_learningcompanions{{/str}}</a>
</div>
