{{!
    @template local_thi_learning_companions/group/group_invite_list

    Lists users that can be invited

    Example context (json):
    {
        "users": [{
            "checked": "",
            "id": "3",
            "profilepicture": "<span class=\"userinitials size-240\" title=\"Max Mustermann\" aria-label=\"Max Mustermann\" role=\"img\">MM</span>",
            "fullname": "Sinjoro Ajnulo"
        }]
    }
}}
{{#users.length}}
    <ul  class="invite-member-list">
        {{#users}}
            <li>
                <input type="radio" class="js-invite-radio invite-radio" {{#checked}}checked{{/checked}} id="user-invite-{{id}}" value="{{id}}" name="userid">
                <label for="user-invite-{{id}}">
                    {{{profilepicture}}}
                    <span>
                        {{fullname}}
                    </span>
                </label>
            </li>
        {{/users}}
    </ul>
{{/users.length}}

{{^users}}
    <div class="mb-3">{{#str}}nousersfound, local_thi_learning_companions{{/str}}</div>
{{/users}}
