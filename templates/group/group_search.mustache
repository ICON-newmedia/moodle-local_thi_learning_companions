<div id="local_learningcompanions_group_search">
    <h1>{{#str}}findgroup, local_learningcompanions{{/str}}</h1>
    {{#hasgroups}}
        <table class="stripe hover compact" id="allgroupstable" data-paging="true" data-page-length="50">
            <thead>
                <tr>
                    <th>{{#str}}topic, local_learningcompanions{{/str}}</th>
                    <th>{{#str}}name, local_learningcompanions{{/str}}</th>
                    <th>{{#str}}join, local_learningcompanions{{/str}}</th>
                    <th>{{#str}}membercount, local_learningcompanions{{/str}}</th>
                    <th>{{#str}}createdon, local_learningcompanions{{/str}}</th>
                    <th>{{#str}}lastactivity, local_learningcompanions{{/str}}</th>
                </tr>
            </thead>
            <tbody>
            {{#groups}}
                <tr class="grouprow" data-gid="{{id}}" data-title="{{name}}">
                    <td>
                        {{keywords_list}}
                    </td>
                    <td>
                        {{name}}
                    </td>
                    <td>
                        {{#closedgroupbool}}
                            <span data-balloon="{{#str}}closedgroup, local_learningcompanions{{/str}}" data-balloon-pos="up">
                                <i class="fa fa-arrow-right icon-joingroup"></i>
                            </span>
                        {{/closedgroupbool}}
                        {{^closedgroupbool}}
                            <span data-balloon="{{#str}}opengroup, local_learningcompanions{{/str}}" data-balloon-pos="up">
                                <i class="fa fa-arrow-left icon-joingroup"></i>
                            </span>
                        {{/closedgroupbool}}
                    </td>
                    <td>
                        {{membercount}}
                    </td>
                    <td>
                        {{timecreated_dmY}}
                    </td>
                    <td>
                        lastactivity
                    </td>
                </tr>
            {{/groups}}
            </tbody>
        </table>
    {{/hasgroups}}
    {{^groups}}
        <p>{{#str}}nogroupsfound, local_learningcompanions{{/str}}</p>
    {{/groups}}
</div>