{{!
    @template local_thi_learning_companions/chat

    Template for the chat module

    Example context (json):
    {
        "form": "<form>the rendered HTML of the chat form</form>",
        "userid": "3",
        "groupid": "2",
        "languagestrings": {
            "delete_post": "Translated string for delete_post",
            "report_post": "Translated string for report_post",
            "no_posts_available": "Translated string for no_posts_available",
            "not_allowed_to_see_posts": "Translated string for not_allowed_to_see_posts"
        }
    }
}}
<div class="container-fluid">
    <div class="mb-1">
        <a href="{{globals.config.wwwroot}}/local/thi_learning_companions/group/search.php" class="ml-2"><i
            class="fa fa-chevron-right block_thi_learning_companions_chevron"></i>
            {{#str}}group-me-up, local_thi_learning_companions{{/str}}
        </a>
    </div>
    <div id="thi_learning_companions_chat">
        <div class="row">
            <div id="thi_learning_companions_groups-content" class="col-lg-3 col-12"></div>
            <div id="thi_learning_companions_chat" class="col-12 col-lg-9">
                <div id="thi_learning_companions_chat-content"></div>
                {{{form}}}
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var thi_learning_companions_chat_userid = {{userid}};
    var thi_learning_companions_groupid = {{groupid}};
</script>

{{#js}}
{{{languageStrings}}}
window.$(document).ready(function() {
window.Chat.startChat();
});
{{/js}}
