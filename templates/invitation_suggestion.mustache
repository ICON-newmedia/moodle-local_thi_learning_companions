{{!
    @template local_thi_learning_companions/invitation_suggestion

    Template for showing an entry of the autocomplete for suggesting users to invite

    Example context (json):
    {
        "profilepicture": "<span class="userinitials size-240" title="Max Mustermann" aria-label="Max Mustermann" role="img">MM</span>",
        "fullname": "Max Mustermann",
        "description": "<p>The group <em>description</em></p>",
        "hasidentity": "true",
        "identity": "someprofilefieldvalues"
    }
}}
<span>
    {{{profilepicture}}}
    <span>{{fullname}}</span>
    {{#hasidentity}}
    <span><small>{{identity}}</small></span>
    {{/hasidentity}}
</span>
